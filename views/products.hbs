{{> title subtitle="Products"}}

<div class="options-container">
    <p><a href="/products/create">Create</a></p>
</div>

{{#each groupedProductMap}}
    <div class="category-container">
    <h3>{{@key}}</h3>
    {{#each this}}
        <div class="item-container">
            <p>Name: <a href="/products/{{_id}}">{{name}}</a></p>
            <p>Price: {{price}}</p>
            <p>Category: {{category.type}}</p>
        </div>
    {{/each}}
    </div>
{{/each}}